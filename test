#!/bin/bash

declare -a tests=("test_comm" "test_serialization" "test_particle_step") # space separated list ("test_1" "test_2")
build=build_test_S9peX6noUt0qQaFBcTWp # a safeguard to delete nothing that is important



# set directory
cd "$(dirname "$0")"

# Build
rm -rf "$build"
mkdir "$build"
cd "$build"
echo "cmake -DCMAKE_BUILD_TYPE=Release .."
cmake -DCMAKE_BUILD_TYPE=Release .. > /dev/null
for t in "${tests[@]}"
do
   echo "make -j4 $t"
   make -j4 "$t" > /dev/null 
done

# Run
echo "Running tests. Should print CORRECT after at most x seconds:"


echo -n "    Test Communication ( 1 sec): "
mpirun -n 10 ./test_comm;

echo -n "    Test Serialization ( 1 sec): "
mpirun -n 10 ./test_serialization;

echo -n "    Test Particle Step ( 1 sec): "
./test_particle_step;


echo "COMPLETE"
cd ..
rm -rf "$build"